<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
  <module name="TreeWalker">
    
    <!-- Complessità delle espressioni booleane -->
    <module name="BooleanExpressionComplexity"></module>

    <!-- Complessità ciclomatica -->
    <module name="CyclomaticComplexity"></module>


    <!-- Lunghezza del metodo -->
    <module name="MethodLength"></module>

    <!-- Blocchi catch vuoti -->
    <module name="EmptyCatchBlock"></module>


    <!-- Import con asterisco -->
    <module name="AvoidStarImport"></module>

    <!-- Import vietati -->
    <module name="IllegalImport"></module>

    <!-- Parentesi obbligatorie -->
    <module name="NeedBraces"></module>

  </module>

  
    <!-- Lunghezza del file -->
    <module name="FileLength"></module>


      
    <!-- Lunghezza della riga -->
    <module name="LineLength"></module>

      <!-- Tabulazioni nei file -->
    <module name="FileTabCharacter"></module>


    
  <module name="Header">
    <property name="headerFile" value="LICENSE.txt"/>
    <property name="fileExtensions" value="java"/>
  </module>




</module>



